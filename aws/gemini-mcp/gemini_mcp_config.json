{
  "mcp_servers": {
    "filesystem": {
      "type": "stdio",
      "command": "npx",
      "args": ["@modelcontextprotocol/server-filesystem", "/"]
    },
    "git": {
      "type": "stdio", 
      "command": "npx",
      "args": ["@modelcontextprotocol/server-git"]
    },
    "postgres": {
      "type": "stdio",
      "command": "npx",
      "args": ["@modelcontextprotocol/server-postgres", "postgresql://localhost/mydb"]
    },
    "brave_search": {
      "type": "stdio",
      "command": "npx",
      "args": ["@modelcontextprotocol/server-brave-search"]
    }
  },
  "gemini_mcp_server": {
    "host": "127.0.0.1",
    "port": 3000,
    "path": "/gemini-mcp",
    "description": "Gemini AI Agent exposed as MCP Server"
  },
  "integration_settings": {
    "auto_connect": true,
    "retry_failed_connections": 3,
    "health_check_interval": 30,
    "context_merge_strategy": "timestamp_ordered",
    "max_mcp_context_entries": 50
  }
}
